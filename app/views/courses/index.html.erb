<p style="color: green"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Student Name</th>
      <th>Subject Name</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= link_to course.student.name, course.student%></td>
        <td><%= link_to course.subject.name, course.subject%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p></p>

<%= link_to "New course", new_course_path %>

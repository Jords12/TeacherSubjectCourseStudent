<p style="color: green"><%= notice %></p>

<h1>Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Teacher's Name</th>
      <th>Section</th>
      <th>Number of Units</th>
      <th>Per Unit Rate</th>
      <th>Number of Students</th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= link_to subject.name, subject%></td>
        <td><%= link_to subject.teacher.name, subject.teacher%></td>
        <td><%= subject.section%></td>
        <td><%= subject.number_of_units%></td>
        <td><%= subject.per_unit_rate%></td>
        <td><%= subject.number_of_students%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p></p>

<%= link_to "New subject", new_subject_path %>

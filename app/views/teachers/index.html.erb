<p style="color: green"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th>Per Unit Rate</th>
      <th>Monthly Salary</th>
    </tr>
  </thead>
  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= link_to teacher.name, teacher%></td>
        <td><%= teacher.department%></td>
        <td><%= teacher.per_unit_rate%></td>
        <td><%= teacher.monthly_salary%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p></p>

